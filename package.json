{
  "name": "slitherfi-game",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/server",
    "packages/client"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "npm run dev --workspace=@slitherfi/server",
    "dev:client": "npm run dev --workspace=@slitherfi/client",
    "build": "npm run build:server && npm run build:client",
    "build:server": "npm run build --workspace=@slitherfi/server",
    "build:client": "npm run build --workspace=@slitherfi/client",
    "clean": "rm -rf node_modules packages/*/node_modules packages/*/.next packages/*/dist"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "overrides": {
    "react": "18.2.0",
    "react-dom": "18.2.0"
  }
}

